<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/topLayout"
        layout="@layout/layout_top_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true" />
    <LinearLayout
        android:id="@+id/userLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/topLayout"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ration_card_number"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="#00304c"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Ration Card No"
                    android:textColor="#a4a4a4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/rationCardNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:background="#016198"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mobile_no"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#00304c"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Mobile No"
                    android:textColor="#a4a4a4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/mobileNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#016198"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_types"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="#00304c"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Card Type"
                    android:textColor="#a4a4a4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/rationCardType"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#016198"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@id/number_adults"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="#00304c"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Number of Adults"
                    android:textColor="#a4a4a4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/noOfAdults"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:background="#016198"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/number_child"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#00304c"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Number of Child"
                    android:textColor="#a4a4a4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/noOfChild"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#016198"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/number_cylinder"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="#00304c"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Number of Cylinder"
                    android:textColor="#a4a4a4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/numberOfCylinder"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#016198"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/captured_image"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="#00304c"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Image"
                    android:textColor="#a4a4a4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/imageAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="5dp"
                    android:background="#016198"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/qr_code"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="#00304c"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="QR Code Ref"
                    android:textColor="#a4a4a4"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/qrCodeUFC"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:background="#016198"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="Card Type"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_edit"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="#1097db"
                    android:text="Edit"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="#1097db"
                    android:text="Cancel"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_Submit"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="#0b7700"
                    android:text="Submit"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/bottom_layout"
        layout="@layout/user_bottom_other_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
