<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/topLayout"
        layout="@layout/layout_top_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/topLayout"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aRegisterNoLabel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#777777"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/ration_card_number1"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="60dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/rationCardNoLabel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#777777"
                android:gravity="center"
                android:text="@string/ration_card_number1"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="60dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/rationCardTypeLabel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#777777"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/ration_card_number1"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="60dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/mobileNoLabel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#777777"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/ration_card_number1"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#777777" />

            <TextView
                android:id="@+id/aRegNoValue"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#0288D1"
                android:textSize="22dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#777777" />

            <TextView
                android:id="@+id/rationCardNoValue"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#0288D1"
                android:textSize="22dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#777777" />

            <TextView
                android:id="@+id/rationCardTypeValue"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#0288D1"
                android:textSize="22dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#777777" />

            <TextView
                android:id="@+id/mobileNoValue"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#0288D1"
                android:textSize="22dp" />

            <!--<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/childCount"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#0288D1"
                    android:textSize="22dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="#777777" />

                <TextView
                    android:id="@+id/adultCount"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#0288D1"
                    android:textSize="22dp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="fill_parent"
                    android:background="#777777" />

                <TextView
                    android:id="@+id/cylinderCount"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#0288D1"
                    android:textSize="22dp" />
            </LinearLayout>-->

            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#777777" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#777777" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/details_layout"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp">

            <RelativeLayout
                android:id="@+id/withComodity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="53dp"
                        android:background="#0288D1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/commoditys"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="#D4D4D4" />

                        <TextView
                            android:id="@+id/billDetailQuantity"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:textSize="25dp" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/summaryCancel"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/billDetailLinearLayoutLabel">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/listView_bill_detail"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/billDetailLinearLayoutLabel"
                                android:orientation="vertical">

                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/noComodity"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:text="@string/noComodity"
                    android:textColor="@color/login_background"
                    android:textSize="20dp" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textColor="#029555"
                android:textSize="30dp" />

            <Button
                android:textAllCaps="false"

                android:id="@+id/summarySubmit"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/textViewMessage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="#029555"
                android:text="@string/submit"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </RelativeLayout>
    </LinearLayout>


    <include
        android:id="@+id/bottom_layout"
        layout="@layout/user_bottom_other_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>