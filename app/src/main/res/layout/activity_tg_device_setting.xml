<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_icon"
    android:orientation="vertical"
    tools:context="com.omneagate.activity.TgDeviceSettingActivity">

    <include
        android:id="@+id/topLayout"
        layout="@layout/layout_top_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayout"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textColor="#6B6B6B"
                        android:text="@string/language_label" />


                    <RelativeLayout
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cat">

                        <Spinner
                            android:id="@+id/languageSpinner"
                            android:layout_width="400dp"
                            android:layout_height="60dp"
                            android:background="@drawable/login_text_box" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:padding="10dp"
                            android:src="@drawable/ic_drop_down" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textColor="#6B6B6B"
                        android:text="@string/device_id" />

                    <EditText
                        android:id="@+id/edtDeviceId"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:background="@drawable/no_editable_edittext"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:inputType="text|textNoSuggestions"
                        android:maxLength="50"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="#808080"
                        android:textSize="20dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textColor="#6B6B6B"
                        android:text="@string/imei_number" />

                    <EditText
                        android:id="@+id/edtImeiNumber"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:background="@drawable/no_editable_edittext"
                        android:clickable="false"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ ."
                        android:editable="false"
                        android:focusable="false"
                        android:imeOptions="actionNext"
                        android:inputType="text|textNoSuggestions"
                        android:maxLength="50"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="#808080"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textColor="#6B6B6B"
                        android:text="@string/sim_serial_no" />

                    <EditText
                        android:id="@+id/edtSimSerialNo"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:background="@drawable/no_editable_edittext"
                        android:clickable="false"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ ."
                        android:editable="false"
                        android:focusable="false"
                        android:imeOptions="actionNext"
                        android:inputType="text|textNoSuggestions"
                        android:maxLength="50"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="#808080"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#6B6B6B"
                    android:text="@string/weighting_machine" />


                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cat">

                    <Spinner
                        android:id="@+id/productType"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:background="@drawable/login_text_box" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_drop_down" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#6B6B6B"
                    android:text="@string/connection_type" />


                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cat">

                    <Spinner
                        android:id="@+id/connectionType"
                        android:layout_width="400dp"
                        android:layout_height="60dp"
                        android:background="@drawable/login_text_box" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_drop_down" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="#6B6B6B"
                    android:text="@string/build_number" />

                <EditText
                    android:id="@+id/edtBuildNumber"
                    android:layout_width="400dp"
                    android:layout_height="60dp"
                    android:background="@drawable/no_editable_edittext"
                    android:clickable="false"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ ."
                    android:editable="false"
                    android:focusable="false"
                    android:imeOptions="actionNext"
                    android:inputType="text|textNoSuggestions"
                    android:maxLength="50"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/bottom_layout">

        <Button
            android:id="@+id/btCancel"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/grey_background"
            android:text="@string/cancelCaps"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btSaveSettings"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/green_background"
            android:text="@string/saveCaps"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>


    <include
        android:id="@+id/bottom_layout"
        layout="@layout/tg_user_bottom_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
