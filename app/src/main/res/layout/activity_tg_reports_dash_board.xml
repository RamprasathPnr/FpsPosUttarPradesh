<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omneagate.activity.TgDashBoardActivity">

    <include
        android:id="@+id/topLayout"
        layout="@layout/layout_top_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true" />

    <include
        android:id="@+id/timeLayout"
        layout="@layout/tg_user_top_time_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/topLayout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeLayout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/fps_allotment"
                    android:layout_width="280dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/tg_dash_board"
                    android:orientation="horizontal">

                    <com.omneagate.Util.SquareLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/fps_icon_report" />
                    </com.omneagate.Util.SquareLayout>

                    <TextView
                        android:id="@+id/scan_finger_print"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center"
                        android:text="@string/fps_allotment"
                        android:textColor="#3D3D3D"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_position"
                    android:layout_width="285dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/tg_dash_board"
                    android:orientation="horizontal">

                    <com.omneagate.Util.SquareLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/card_position_icon_report" />
                    </com.omneagate.Util.SquareLayout>

                    <TextView
                        android:id="@+id/receive_goods"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center"
                        android:text="@string/card_position"
                        android:textColor="#3D3D3D"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/current_closing_balance"
                    android:layout_width="285dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/tg_dash_board"
                    android:orientation="horizontal">

                    <com.omneagate.Util.SquareLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/current_closing_balance_report" />
                    </com.omneagate.Util.SquareLayout>

                    <TextView
                        android:id="@+id/button_report"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center"
                        android:text="@string/current_closing_balance"
                        android:textColor="#3D3D3D"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/fps_sales"
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/tg_dash_board"
                    android:orientation="horizontal">

                    <com.omneagate.Util.SquareLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/fps_sales_report" />
                    </com.omneagate.Util.SquareLayout>

                    <TextView
                        android:id="@+id/scan_finger_print1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center"
                        android:text="@string/fps_sales"
                        android:textColor="#3D3D3D"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stock_inward"
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/tg_dash_board"
                    android:orientation="horizontal">

                    <com.omneagate.Util.SquareLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/stock_invard_report" />
                    </com.omneagate.Util.SquareLayout>

                    <TextView
                        android:id="@+id/receive_goods1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center"
                        android:text="@string/fps_receipts"
                        android:textColor="#3D3D3D"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fps_sales_day_report"
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/tg_dash_board"
                    android:orientation="horizontal">

                    <com.omneagate.Util.SquareLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/report_report" />
                    </com.omneagate.Util.SquareLayout>

                    <TextView
                        android:id="@+id/button_report1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center"
                        android:text="@string/fps_sales_day_report"
                        android:textColor="#3D3D3D"
                        android:textSize="20dp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/fps_closing_monthly"
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/tg_dash_board"
                    android:orientation="horizontal">

                    <com.omneagate.Util.SquareLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/fps_monthly_report" />
                    </com.omneagate.Util.SquareLayout>

                    <TextView
                        android:id="@+id/receive_goods2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center"
                        android:text="@string/fps_closing_balance"
                        android:textColor="#3D3D3D"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fps_portability_daywiseReport"
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/tg_dash_board"
                    android:orientation="horizontal">

                    <com.omneagate.Util.SquareLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/portability_day" />
                    </com.omneagate.Util.SquareLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center"
                        android:text="@string/portability_day_report"
                        android:textColor="#3D3D3D"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fps_portability_monthwise"
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/tg_dash_board"
                    android:orientation="horizontal">

                    <com.omneagate.Util.SquareLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:src="@drawable/portability_month_icon" />
                    </com.omneagate.Util.SquareLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center"
                        android:text="@string/portability_month_report"
                        android:textColor="#3D3D3D"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:gravity="left">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/grey_background"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="#FFF" />
    </LinearLayout>

    <include
        android:id="@+id/bottom_layout"
        layout="@layout/tg_user_bottom_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
