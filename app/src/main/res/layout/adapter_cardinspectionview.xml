<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linearLayoutTitleAdapter"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:background="@drawable/inspection_border"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/commodityBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.18"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#777777"/>

        <TextView
            android:id="@+id/sno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"             android:paddingRight="5dp"
            android:text="100"
            android:textColor="@color/grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.10"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#777777"/>

        <TextView
            android:id="@+id/cardnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"             android:paddingRight="5dp"
            android:text="card number"
            android:textColor="@color/grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/challanIdLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777"/>

        <TextView
            android:id="@+id/txt_commodity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"             android:paddingRight="5dp"
            android:singleLine="true"
            android:text="Sample"
            android:textColor="@color/grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.12"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777"/>

        <TextView
            android:id="@+id/txt_system_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"             android:paddingRight="5dp"
            android:singleLine="true"
            android:text="Sample"
            android:textColor="@color/grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.12"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777"/>

        <TextView
            android:id="@+id/txt_physical_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"             android:paddingRight="5dp"
            android:singleLine="true"
            android:text="Sample"
            android:textColor="@color/grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.12"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777"/>

        <TextView
            android:id="@+id/txt_variance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"             android:paddingRight="5dp"
            android:singleLine="true"
            android:text="Sample"
            android:textColor="@color/grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="true"
                android:text="Sample"
                android:textColor="@color/grey"
                android:textSize="16sp"/>
        </ScrollView>
        <!--<View-->
        <!--android:layout_width="2dp"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:background="#777777"/>-->
    </RelativeLayout>
</LinearLayout>

