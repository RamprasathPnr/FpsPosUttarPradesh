<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutTitleAdapter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777" />

        <LinearLayout
            android:id="@+id/seriaNoBackground"
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSerialNo"
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvBeneficiaryName"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777" />
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/tvBeneficiaryGender"
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:singleLine="true"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvBeneficiaryDob"
                android:layout_width="fill_parent"
                android:singleLine="true"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            >

            <TextView
                android:id="@+id/tvBeneficiaryAge"
                android:layout_width="140dp"
                android:singleLine="true"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvBeneficiaryAadhaarNo"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#777777" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#777777" />
</LinearLayout>