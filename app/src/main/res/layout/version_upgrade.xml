<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/topLayout"
        layout="@layout/layout_top_layout_other"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_margin="20dp"
        android:background="@drawable/back_statistics"
        android:layout_below="@+id/topLayout"
        android:id="@+id/scrollView2">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="#eeeeee"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="New Version"
                    android:textColor="#757575"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="#eeeeee"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="State"
                    android:textColor="#757575"
                    android:id="@+id/Statetxt" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="#eeeeee"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Create Date"
                    android:textColor="#757575"
                    android:id="@+id/Createtxt" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="#eeeeee"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Reference Id"
                    android:textColor="#757575"
                    android:id="@+id/reftxt" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
             </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#d4d4d4"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/current_version"
                    android:textStyle="bold"
                    android:textColor="#757575"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/upgrade_status"
                    android:textStyle="bold"
                    android:textColor="#757575"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/created_time"
                    android:textStyle="bold"
                    android:textColor="#757575"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/ref_id"
                    android:textStyle="bold"
                    android:textColor="#757575"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>

            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#d4d4d4"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="#eeeeee"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Old Version"
                    android:textColor="#757575"
                    android:id="@+id/oldtxt" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Description"
                    android:background="#eeeeee"
                    android:textColor="#757575"
                    android:id="@+id/destxt" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="#eeeeee"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Execution Date"
                    android:textColor="#757575"
                    android:id="@+id/exetxt" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="#eeeeee"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Status"
                    android:textColor="#757575"
                    android:id="@+id/Staxt" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>

            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#d4d4d4"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/old_version"
                    android:textStyle="bold"
                    android:textColor="#757575"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/description"
                    android:textStyle="bold"
                    android:textColor="#757575"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/updated_time"
                    android:textStyle="bold"
                    android:textColor="#757575"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:id="@+id/status"
                    android:textStyle="bold"
                    android:textColor="#757575"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#d4d4d4"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/bottom_layout"
        layout="@layout/user_bottom_other_screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/scrollView2" />
</RelativeLayout>
